$(document).ready(function() {

  $(".teaser_row_actions_icon").click(function() {
    $(".teaser_row_actions_list").hide();
    $(this).parent().find(".teaser_row_actions_list").show();
  });
  
  $(".teaser_row_actions").mouseleave(function() {
    $(this).find(".teaser_row_actions_list").hide();
  });
  
});