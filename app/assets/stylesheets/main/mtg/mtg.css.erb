.card_info_wrapper_back {
  display:none;
}
.card_info_wrapper {

}
.card_image_wrapper {
  min-height: 250px;
  width: 180px;
  padding-left: 5px;
  padding-top: 5px;  
  display:inline;
  float:left;
}
.card_show_info {
  display:table;
  margin: 0 0px 0 5px;
  width: 330px;
  float:left;
  text-align:left;
}
.card_show_info_row {  
  display:table-row;
  font-size:12px;
  line-height:1.3;
}
.card_show_info_label {
  display: table-cell;
  text-align:right;
  font-weight: bold;
  text-transform: capitalize;
  width:18%;
  vertical-align:middle;
  padding: 4px 5px 4px 10px;
}
.card_show_info_value {
  word-wrap:break-word;
  display: table-cell;
  width:82%;
  max-width:270px;  
  padding: 4px 0 4px 5px;
  border-left:1px solid #eee;
}
.card_show_sell_box {
  width:50px;
  height:20px;
}
.mtg_symbol {
  margin:0 1px;
  height:15px;
  width:15px;
  vertical-align:text-bottom;
}
.mtg_option_symbol {
  display:inline-block;
  vertical-align:bottom;
  height:20px;
  width:20px;
  margin:0 -2px 0 -2px;
  padding:0;
}
.mtg_options_cell {
  max-width:50px;
}
.mtg_card_image {
  -moz-border-radius: 12px;
  -webkit-border-radius: 12px;
  border-radius: 12px;
  -moz-box-shadow:     0px 1px 2px 1px #777;
  -webkit-box-shadow:  0px 1px 2px 1px #777;
  box-shadow:          0px 1px 2px 1px #777;
  width:180px;
  height:258px;
  background-size:180px 258px;  
  margin-bottom:5px;
  position:relative;
  z-index:1;  
  cursor:-webkit-zoom-in;
  cursor:-moz-zoom-in;
}
.mtg_card_image:active{
  transform: scale(1.5);
  -ms-transform: scale(1.5); /* IE 9 */
  -webkit-transform: scale(1.5); /* Safari and Chrome */
  -o-transform: scale(1.5); /* Opera */
  -moz-transform: scale(1.5); /* Firefox */
}
.mtg_card_image_horizontal:active{
  -ms-transform: rotate(90deg) scale(1.5); /* IE 9 */
  -o-transform: rotate(90deg) scale(1.5); /* Opera */
  -moz-transform: rotate(90deg) scale(1.5); /* Firefox */  
  -webkit-transform: rotate(90deg) scale(1.5); /* Safari and Chrome */
  transform: rotate(90deg) scale(1.5);  
}
.mtg_teaser{
  width: 515px;
  height: 120px;
  margin: 10px 0px 10px 0px;
  border: 1px solid #f0f0f0;
  box-shadow:1px 1px 1px 0px #ddd;  
  -moz-border-radius: 7px;
  -webkit-border-radius: 7px;
  border-radius: 7px;
}
.mtg_teaser_image{
  display:inline;
  float:left;
  height:100px;
  width:74px;
  margin:10px;
  -moz-border-radius: 7px;
  -webkit-border-radius: 7px;
  border-radius: 7px;
  -moz-box-shadow:     0px 1px 2px 1px #777;
  -webkit-box-shadow:  0px 1px 2px 1px #777;
  box-shadow:          0px 1px 2px 1px #777;  
}
.mtg_teaser_image_tooltip {
  height:310px;
  width:223px;
}
.mtg_teaser_image_tooltip_image {
  height:310px;
  width:223px;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
  border-radius: 10px;
  -moz-box-shadow:     0px 1px 2px 1px #777;
  -webkit-box-shadow:  0px 1px 2px 1px #777;
  box-shadow:          0px 1px 2px 1px #777;  
}
.mtg_teaser_info{
  display:inline;
  float:left;
  width:405px;
  margin: -15px 0px 0 10px;
  padding-top:10px;
}
.mtg_teaser_info_details {
  margin: -17px 10px 0 10px;
}

