  display: inline;
  text-align: center;
  border-left: 1px solid #DDD ;
}
  
.teaser_row_actions {
  position:relative;
}
.teaser_row_actions_icon {
  cursor: pointer;
}
.teaser_row_actions_list {
  display:none;
  z-index:1000;
  position:absolute;
  width:110px;
  bottom:0px;
  right:-6px;
  margin-top:20px;
  background-color:#fff;
  border: 1px solid #aaa;
  color: #333;
  -moz-box-shadow:    0px 1px 4px 1px #ddd;
  -webkit-box-shadow: 0px 1px 4px 1px #ddd;
  box-shadow:         0px 1px 4px 1px #ddd;
}
.teaser_row_actions_list ul {
  list-style: none;   
}
.teaser_row_actions_list ul li {
  text-align: right;
}
.teaser_row_actions_list ul li a {
  text-decoration: none;
  color:#666;
  display:block;
  padding:2px 5px;
}
.teaser_row_actions_list ul li a:hover, .teaser_row_actions_list ul li a:focus, .teaser_row_actions_list ul li a:active {
  cursor: pointer;
  border: 1px solid #999999; background: #dadada url(<%= asset_path("ui-bg_glass_75_dadada_1x400.png") %>) 50% 50% repeat-x; color: #212121;
  margin: -1px;
}