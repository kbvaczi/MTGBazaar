/* ----- ARTICLES ----- */
.article_header {
  position:relative;
  background:rgb(253,253,253);
  margin-bottom:10px;
  border:1px solid #EEE;
  -moz-border-radius: 8px;
  -webkit-border-radius: 8px;
  border-radius: 8px;  
  box-shadow:1px 1px 1px 0px #ddd;
  z-index: 51;
}
.article_header .article_header_date {
  color:#888;
}
.article_header h2 {
  padding:5px;
  margin:0px 5px;
  border:none;
  box-shadow:none;
}
.article_body {

}
.article_body p {
  font-size:13px;
}
.article_body .article_card_image_small {
  border-radius: 4px;
}
.article_body .article_card_image_small:hover {
  position:relative;
  z-index: 8001;
  transform: scale(4) translate(0px,-29px);
  -ms-transform: scale(4) translate(0px,-29px); /* IE 9 */
  -webkit-transform: scale(4) translate(0px,-29px); /* Safari and Chrome */
  -o-transform: scale(4) translate(0px,-29px); /* Opera */
  -moz-transform: scale(4) translate(0px,-29px); /* Firefox */ 
  transition-delay: 0.2s;
  -moz-transition-delay: 0.2s;
  -webkit-transition-delay: 0.2s;
  -o-transition-delay: 0.2s;      
  transition-duration: 0.3s;
  -moz-transition-duration: 0.3s;
  -webkit-transition-duration: 0.3s;
  -o-transition-duration: 0.3s;
}
.article_body .article_card_image_medium {
  border-radius: 5px;
}
.article_body .article_card_image_medium:hover {
  position:relative;
  z-index: 8001;
  transform: scale(2) translate(0px,-39px);
  -ms-transform: scale(2) translate(0px,-39px); /* IE 9 */
  -webkit-transform: scale(2) translate(0px,-39px); /* Safari and Chrome */
  -o-transform: scale(2) translate(0px,-39px); /* Opera */
  -moz-transform: scale(2) translate(0px,-39px); /* Firefox */ 
  transition-delay: 0.2s;
  -moz-transition-delay: 0.2s;
  -webkit-transition-delay: 0.2s;
  -o-transition-delay: 0.2s;      
  transition-duration: 0.3s;
  -moz-transition-duration: 0.3s;
  -webkit-transition-duration: 0.3s;
  -o-transition-duration: 0.3s;
}