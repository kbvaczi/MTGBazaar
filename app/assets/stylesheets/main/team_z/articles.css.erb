/* ----- ARTICLES ----- */
.article_header {
  position:relative;
  background:rgb(253,253,253);
  margin-bottom:10px;
  border:1px solid #EEE;
  -moz-border-radius: 8px;
  -webkit-border-radius: 8px;
  border-radius: 8px;  
  box-shadow:1px 1px 1px 0px #ddd;
  z-index: 51;
}
.article_header .article_header_date {
  color:#888;
}
.article_header h2 {
  padding:5px;
  margin:0px 5px;
  border:none;
  box-shadow:none;
  font-size:18px;
}
.article_body p {
  margin-left:10px;
  margin-right:10px;
  font-size:14px;
  line-height:20px;
}
.article_body blockquote {
  clear:both;
  padding:25px;
}
.article_body blockquote p {
  font-size:25px;
  font-style:italic;
  color:#fa4b2a;
}
.article_body .article_card_image_wrapper {
  display:inline-block;
}
.article_body .article_card_image_small {
  border-radius: 4px;
  height:155px;
  width:110px;
  margin:2px;
}

.article_body .article_card_image_medium {
  border-radius: 5px;
  height:217px;
  width:156px;  
  margin:2px;  
}
.article_body .article_card_image_large {
  border-radius: 8px;
  height:310px;
  width:223px;  
  margin:2px;  
}