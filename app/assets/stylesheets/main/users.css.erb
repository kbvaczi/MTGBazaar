.transaction_teaser {
  display:table;
  width:100%;
  padding: 5px;
  height:25px;
  -moz-border-radius: 7px;
  -webkit-border-radius: 7px;
  border-radius: 7px;  
}
.transaction_teaser div {
  vertical-align:middle;
  text-align:center;
}
.transaction_teaser_date {
  width:15%;
  text-align:left !important; 
  display:table-cell;  
}
.transaction_teaser_username {
  width:25%;
  display:table-cell;  
}
.transaction_teaser_transaction_number {
  width:15%;
  display:table-cell;  
}
.transaction_teaser_item_count {
  width:10%;
  display:table-cell;  
}
.transaction_teaser_total_value {
  width:10%;
  text-align:right !important;
  display:table-cell;  
}
.transaction_teaser_status {
  width:15%;
  display:table-cell;  
}
.transaction_teaser_actions {
  width:15%;
  text-align:right !important;
  color:blue;
  position:relative;
  display:table-cell;  
}
.transaction_teaser_actions_icon {
  float:right;
  cursor: pointer;
  display:table-cell;  
}
.transaction_teaser_actions_list {
  display:none;
  z-index:1000;
  position:absolute;
  width:110px;
  bottom:0px;
  right:-6px;
  margin-top:20px;
  background-color:#fff;
  border: 1px solid #aaa;
  color: #666;
  -moz-box-shadow:    0px 1px 4px 1px #ddd;
  -webkit-box-shadow: 0px 1px 4px 1px #ddd;
  box-shadow:         0px 1px 4px 1px #ddd;
}
.transaction_teaser_actions_list ul {
  list-style: none;   
}
.transaction_teaser_actions_list ul li {
  text-align: right;
}
.transaction_teaser_actions_list ul li a {
  text-decoration: none;
  color:#666;
  display:block;
  padding:2px 5px;
}
.transaction_teaser_actions_list ul li a:hover, .transaction_teaser_actions_list ul li a:focus, .transaction_teaser_actions_list ul li a:active {
  cursor: pointer;
  border: 1px solid #999999; background: #dadada url(<%= asset_path("ui-bg_glass_75_dadada_1x400.png") %>) 50% 50% repeat-x; color: #212121;
  margin: -1px;
}