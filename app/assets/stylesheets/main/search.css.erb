.search-text {
  width: 134px;
  background: #fff url(<%= asset_path('chosen-sprite.png')%>) no-repeat 100% -24px;
  padding-right:20px !important;
}
.search-select {
  width: 100%;
  padding: 0;
  margin:0;  
}
.search-select-multi {
  width: 100%;
  padding:0;
  margin:0;  
}
.search-color-icon {
  padding-left:4px;
  width: 22px;
  height: 22px;
}
.search-options-icon {
  padding-left:4px;  
  width: 25px;
  height: 25px;
}
.search-divider {
  border-bottom: 1px solid #eee;
  display:block;
  width:100%;
}
.search-submit {
  float: right;
  margin: 15px 0 0 0;  
}
#search_name_suggestions {
  display: none;
  width: 160px;
  position: absolute;
  background: #ddd;
  z-index: 5;
}
#search_form{
  position:relative;
}
.clear_button {
  width: 80px;
  height: 20px;
  text-indent:20px;
  margin-top: 5px;  
  float: left;
  cursor:pointer;
  background-image:url(<%=image_path('x_grey.png')%>);
  background-repeat:no-repeat;
}
.clear_button:hover {
  text-decoration: underline;
  background-image:url(<%=image_path('x_red.png')%>);
}
.x-icon {
  width: 12px;
  height: 12px;
  margin-top: 5px;
  float: right;
  cursor:pointer;
  background-image:url(<%=image_path('x_grey.png')%>);
  background-size:12px 12px;
}
.x-icon:hover {
  background-image:url(<%=image_path('x_red.png')%>);
}