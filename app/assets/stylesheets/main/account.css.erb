
.pricing_summary {
  display:inline-block;
  margin-left:auto;
  margin-right:auto;
  position:relative;  
}
.pricing_summary .price_summary_indicator {
  position:absolute;
  z-index:3;
  border-radius:10px;
  padding:10px 10px;
  margin-top:5px;
  margin-bottom:0px;
  background: rgb(244,244,244);
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.5);
  background: -moz-linear-gradient(top,  rgba(255,255,255,0.3) 0%, rgba(255,255,255,0) 100%),
              -moz-linear-gradient(left,  rgba(244,244,244,1) 0%, rgba(224,224,224,1) 50%, rgba(191,191,191,1) 51%, rgba(226,226,226,1) 100%);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,0.3)), color-stop(100%,rgba(255,255,255,0))),
              -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(244,244,244,1)), color-stop(50%,rgba(224,224,224,1)), color-stop(51%,rgba(191,191,191,1)), color-stop(100%,rgba(226,226,226,1)));
  background: -webkit-linear-gradient(top,  rgba(255,255,255,0.3) 0%,rgba(255,255,255,0) 100%),
              -webkit-linear-gradient(left,  rgba(244,244,244,1) 0%,rgba(224,224,224,1) 50%,rgba(191,191,191,1) 51%,rgba(226,226,226,1) 100%);
  background: -o-linear-gradient(top,  rgba(255,255,255,0.3) 0%,rgba(255,255,255,0) 100%),
              -o-linear-gradient(left,  rgba(244,244,244,1) 0%,rgba(224,224,224,1) 50%,rgba(191,191,191,1) 51%,rgba(226,226,226,1) 100%);
  background: -ms-linear-gradient(top,  rgba(255,255,255,0.3) 0%,rgba(255,255,255,0) 100%),
              -ms-linear-gradient(left,  rgba(244,244,244,1) 0%,rgba(224,224,224,1) 50%,rgba(191,191,191,1) 51%,rgba(226,226,226,1) 100%);
  background: linear-gradient(to bottom,  rgba(255,255,255,0.3) 0%,rgba(255,255,255,0) 100%),
              linear-gradient(to right,  rgba(244,244,244,1) 0%,rgba(224,224,224,1) 50%,rgba(191,191,191,1) 51%,rgba(226,226,226,1) 100%);
}
.pricing_gridline {
  border-right: 1px solid #888;
