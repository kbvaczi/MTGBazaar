.overlay_window_wrapper {
  position:relative;
  width:100%;
  text-align:center;
  display:block;
}

/* the overlayed element */
.overlay_window {
 
    /* must be initially hidden */
    display:none;
 
    /* place overlay on top of other elements */
    z-index:10000;
 
    /* styling */
    background-color:#FFF;
 
    width:500px;
    min-height:200px;
    max-height:600px;
    border:1px solid #666;
    padding:20px;
    text-align:center;
    margin:auto;
 
    /* CSS3 styling for latest browsers */
    -moz-box-shadow:0 0 90px 5px #000;
    -webkit-box-shadow: 0 0 90px #000;
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    border-radius: 10px;
}
 
/* close button positioned on upper right corner */
.overlay_window .close {
    background-image: url("https://s3.amazonaws.com/mtgbazaar/images/close.png");
    position:absolute;
    right:-15px;
    top:-15px;
    cursor:pointer;
    height:35px;
    width:35px;
}

/* tooltip styling. by default the element to be styled is .tooltip  */
.tooltip {
  background:transparent url("https://s3.amazonaws.com/mtgbazaar/images/black_arrow.png");
  border:none;
  height:70px;
  width:170px;
  padding:20px;
  color:#eee;
  overflow:hidden;
  word-wrap: break-word;
  text-align:center;
}

/* container for external content. uses vertical scrollbar, if needed */
div.contentWrap {
  height:441px;
  overflow-y:auto;
}
