/* ----- SimpleForm Styles ----- */
.simple_form {
  display:block;
  margin: auto;
  padding:15px 0 15px 0;
  width:500px;
}
.simple_form h2 {
  margin: 1px 30px 10px 30px;
}
.simple_form .error {
  clear:   left;
  color:   red;
  display: block;
  margin-left: 36%;
  margin-bottom: 10px;
  font-style: italic;
}
.simple_form .hint {
  clear: left;
  margin-left: 36%;
  color: #bbb;
  display: block;
  margin-bottom:10px;
  font-style: italic;
}
.simple_form div.input {
  margin-bottom: 5px;
}
.simple_form label {
  float: left;
  width: 30%;
  text-align: right;
  margin: 4px 10px;
}
.simple_form .select select , .simple_form .select .chzn-container {
  width: 52%  !important;
  line-height: 26px;
  margin: 2px 0 5px 0;
  paddding: none;
}

.simple_form .select .chzn-container .chzn-drop {
  width: 98% !important;
}
.simple_form .select .chzn-container .chzn-drop .chzn-search {
  width: 99% !important;
}
.simple_form .select .chzn-container .chzn-drop .chzn-search input {
  width: 85% !important;
}
.simple_form .input p {
  width: 52%;
  padding: 4px 0 4px 0;
  margin-left: 3px;
  display: inline-block;
}
.simple_form .date select , .simple_form .date .chzn-container{
  width: 50% !important;;
  margin: 2px 0 5px 2px;
}
.simple_form .input input[type='text'], .simple_form .input input[type='email'], .simple_form .input input[type='password'], .simple_form .input input[type='file']  {
  width:50% !important;
}
div.boolean, .simple_form input[type='submit'] {
  margin-left: 35%;
  margin-right: auto;
}
div.boolean label, label.collection_radio {
  float: none;
  margin: 0;
}

label.collection_radio {
  margin-right: 10px;
  vertical-align: -2px;
  margin-left:   2px;
}
.simple_form .input.radio label.radio {
  display:table-column-group;
}
.simple_form .input.radio span {
  display:table-row;
  line-height:20px;
}
.field_with_errors {
  display: inline;
  color: red;
}
.field_with_errors input {

}
.field_with_errors .hint {
  display: none;
}
.simple_form input.radio {
  margin-right: 5px;
  vertical-align: -3px;
}
.simple_form textarea.text {
  resize: none; 
  width:50%  !important;
  height:100px;
  vertical-align: -3px;
}

.simple_form label.collection_check_boxes {
  float: none;
  margin: 0;
  vertical-align: -2px;
  margin-left:   2px;
}