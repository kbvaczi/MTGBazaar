
<%= simple_form_for @article,:url => publish_team_z_article_path(@article), :method => :put do |f| %>
  
  <br class='spacer'/>
                                             
  <%= f.input :active_at,   :label => 'Publish This Article On',
                            :hint => 'Article will go live on this date. Leave blank to make post live immediately',
                            #:input_html => {:class => 'chzn-select chzn-nosearch'},
                            :discard_minute => true, :discard_second => true %>
                            
  <%= f.input :featured,    :label => 'Featured on Front Page',
                            :as => :boolean %>                            

  <br class='spacer'/>
  <br class='spacer'/>  
  
  <%= f.submit 'Publish This Article' %>
  
<% end %>