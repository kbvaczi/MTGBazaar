<div class='article_bar content_shadow'>
  <h1><%= article.profile.article_series_name %></h1>
  <div>
    <div class='avatar_wrapper left'>
      <div class='avatar' style="background-image:url(<%= article.profile.avatar_url.to_s %>);"></div>
    </div>
    <div class="shadow" style="height:90px;">
      <div class="left title"><h2><%= link_to article.title.truncate(50, :omission => "..."), team_z_article_path(article) %></h2></div>
      <div class="left description"><%= article.description.truncate(90, :omission => "...") %></div>        
    </div>
  </div>
</div>