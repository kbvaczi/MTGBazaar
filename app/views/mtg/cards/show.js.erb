/* UPDATES LISTINGS FOR A GIVEN CARD BASED ON SORT */
<% if params[:update_card_info] == "true" %>
  var template = $("<%= escape_javascript render :template => "mtg/cards/show", :formats => [:html] %>");
  $('#content').html(template.nextAll('#content').html());
<% else %>
  $('#card_listings').html("<%= escape_javascript render :partial => "mtg/cards/show_listings", :locals => {:listings => @listings}%>");
<% end %>

initialize_overlays();
initialize_tooltips();

