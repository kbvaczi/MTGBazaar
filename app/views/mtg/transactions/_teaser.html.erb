<%# displays items in a given transaction %>
<%# LOCALS: transaction = current transaction %>
<div>
  <div class="left"> Sale to <%= transaction.buyer.username %> on <%= transaction.created_at.strftime("%d-%b %Y") %></div>
  <div class="right"> Status: </div>
  <br class="spacer"/>
  <br class="spacer"/>
  <% transaction.items.each do |item| %>
  <div style="clear:both;display:block;">
    <div style="position:relative;display:inline-block;float:left;width:160px;height:140px;font-size:10px;color:#333;overflow:none;">
      <p> <%= item.card.formatted_name %></p>
      <div style="float:left">
        <%= link_to image_tag(item.card.thumbnail_image_path, :height => "117px", :width => "85px"), mtg_card_url(item.card) %>
        <br class="spacer"/>
        <%= "#{number_to_currency(item.price.dollars)} x #{item.quantity}"%>  
        <br class="spacer"/>  
      </div>
      <div style="margin-left:5px;float:left;">
        <%= display_set_symbol(item.card.set) %>
        <br/>
        <%= item.formatted_condition %>
        <br/>
        <%= item.language %>
        <br/>        
        <% if item.foil? %>
          <%= "Foil" %>        
          <br/>        
        <% end %>
        <% if item.signed? %>
          <%= "Signed" %>        
          <br/>        
        <% end %>  
        <% if item.misprint? %>
          <%= "Irregularity" %>        
          <br/>        
        <% end %>              
      </div>     
    </div>
  </div>    
  <% end %>
  <br class="spacer"/>  
  <br class="spacer"/>
  <div class="right"> Total Value: <%= number_to_currency(transaction.total_value) %></div>
  <br class="spacer"/>
</div>
<br style="clear:both;">