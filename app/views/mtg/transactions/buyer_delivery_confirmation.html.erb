<% title "Delivery Confirmation"%>

<h1>Delivery Confirmation</h1>

<%= simple_form_for @transaction, :url => create_buyer_delivery_confirmation_path, :method => :put do |f| %>
  <br class="spacer" />
  <br class="spacer" />
  <br class="spacer" />  
  
  <div class="inputs">
    <%#= f.input :buyer_delivery_confirmation,   :label => "Confirm Delivery",
                                                :as => :select,
                                                :collection => [["All items received as expected", true], ["There is a problem with the order", false]],
                                                :include_blank => false,
                                                :input_html => {:class => 'chzn-select chzn-nosearch'},
                                                :required => true %>
    <%# TODO: create a ticket object to put these fields in%>                                            
    <%#= f.input :delivery_problem,              :label => "Problem",
                                                :as => :select,
                                                :collection => [["Condition of items", "condition"], ["Missing or incorrect items", "presence"], ["Counterfeit items", "counterfit"]],
                                                :include_blank => false,
                                                :input_html => {:class => 'chzn-select chzn-hidden'},
                                                :required => false %>

    <%#= f.input :delivery_problem_text,         :label => "Optional Message",
                                                :as => :text,
                                                :hint => "Further describe your problem",
                                                :required => false,
                                                :input_html => {:max_length => '255'} %>


    <%= f.input :buyer_feedback,      :label => "Seller Feedback",
                                      :as => :select,
                                      :collection => [["Postive","1"], ["Negative","-1"], ["Neutral","0"]],
                                      :default => "+",
                                      :include_blank => false,
                                      :hint => "Do you recommend this seller?",                                      
                                      :input_html => {:class => 'chzn-select chzn-nosearch'},
                                      :required => true %>
          
    <%= f.input :buyer_feedback_text, :label => "Optional Message",
                                      :as => :text,
                                      :hint => "Reminder: all feedback is public",
                                      :required => false,
                                      :input_html => {:max_length => '255'} %>
                                      
  </div>
  <br class="spacer"/>
  <br class="spacer"/>
  <br class="spacer"/>  
  
  <div class="center">
    <%= f.button :submit, "Confirm Delivery", :class => "center" %>
  </div>
<% end %>