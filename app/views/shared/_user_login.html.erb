<div id="user_login" class="right mt-m ml" style="min-height:25px;width:50%;">
  
  <%unless user_signed_in? %>
    <%= form_for(:user, :url => user_session_path, :html => { :honeypot => true }) do |f| %>
    
      <div class="right mr">
        <%= f.label :email, "Email:" %>
        <%= f.text_field :email, :style =>"width:150px;", :id => "login_email" %>
        &nbsp;
        <%= f.label :password, "Password:" %>
        <%= f.password_field :password, :style =>"width:145px;", :id => "login_password" %>
        <%= f.submit "Sign In" %>       
      </div>
      
    <% end %>
  <% else %>
    <div class="right mr">
      <%= button_to "Sign out", destroy_user_session_path, :method => :delete %>
    </div>
  <% end %>
</div>