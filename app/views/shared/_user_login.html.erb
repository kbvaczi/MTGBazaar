<div class="right mt ml mr" style="min-height:25px;width:50%;">
  
  <%unless user_signed_in? %>
    <%= form_for(:user, :url => user_session_path) do |f| %>

      <div class="right">
       <%= f.submit "Sign In" , :class => "right" %>
      </div>

      <div class="right">
        <%= f.label :email, "Email" %>
        <%= f.text_field :email, :style=>"width:120px;", :class => "test" %>
        &nbsp;
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, :style=>"width:120px;" %>
        &nbsp;
      </div>
      
    <% end %>
  <% else %>
    <div class="right">
      <%= "#{current_user.account.first_name} #{current_user.account.last_name}" %> [<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>]
    </div>
  <% end %>
</div>