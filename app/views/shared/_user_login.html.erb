<div id="user_login" class="right mt-m ml">
  
  <%unless user_signed_in? %>
    <%= form_for(:user, :url => user_session_path) do |f| %>
    
      <div class="right mr">
        <%= f.label :email, "Email:", :style => "font-size:100%;" %>
        <%# value must be set to blank otherwise user's email will appear when viewing user/show page %>
        <%= f.text_field :email, :style =>"width:150px;", :id => "login_email", :value => "" %>
        &nbsp;
        <%= f.label :password, "Password:" %>
        <%= f.password_field :password, :style =>"width:145px;", :id => "login_password" %>
        <%= f.submit "Sign In" %>       
      </div>
      
    <% end %>
  <% else %>
    <div class="right mr">
			<% if current_cart.item_count > 0 %>
      <%= button_to "Sign out", destroy_user_session_path, :confirm => "Signing out will clear the contents of your cart", :method => :delete %>
			<% else %>
			<%= button_to "Sign out", destroy_user_session_path, :method => :delete %>
			<% end %>
    </div>
  <% end %>
</div>