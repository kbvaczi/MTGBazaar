<% gridline_width = 20 %>
<% 
  spacer_position = case
                      when price_analysis_pricepoint < -1  then -10
                      when price_analysis_pricepoint < 11 then price_analysis_pricepoint.to_i * 1.05 * 20 + 10
                      else 11
                    end
%>
<div class='pricing_summary_text_left center t-l tc-grey'>Low Pricing</div>
<div class='pricing_summary center'>
  <div class='price_summary_indicator left' style='left:<%=spacer_position%>px;'></div>  
  <div class='pricing_gridline_large left'> </div>
  <% 9.times do %>
    <div class='pricing_gridline left'> </div>
  <% end %>
  <div class='pricing_gridline_large left'></div>    
  <div class='pricing_spacer left'> </div>  
</div>
<div class='pricing_summary_text_left center t-l tc-grey' >High Pricing</div>

<%#  case
      when price_analysis_pricepoint < -1  then message = "<p> Your average pricing is below minimum recommended price </p>".html_safe
      when price_analysis_pricepoint < 3.5   then message = "<p> Your average pricing is towards the low-end</p>".html_safe
      when price_analysis_pricepoint < 6.5   then message = "<p> Your average pricing is medium</p>".html_safe              
      when price_analysis_pricepoint < 11 then message = "<p> Your average pricing is towards the high-end</p>".html_safe                
      else message = "<p> Your average pricing is above maximum recommended price</p>".html_safe
    end
%>
<%#= message %>