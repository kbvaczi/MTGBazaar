<%= render :partial => "users/manage_account_header" %>
<div class= "ma">
  <h2>Make a Withdraw</h2>
  <%= simple_form_for @withdraw, :url => new_account_withdraw_path do |f| %>
    <br class="spacer"/>
    <br class="spacer"/>
    <div class="inputs">
      <%= f.input :balance,       :label => "Amount to Withdraw",
                                  :as => :select,
                                  :required => 'true' , 
                                  :collection => list_deposit_options , 
                                  :include_blank => false , 
                                  :input_html => { :class => 'chzn-select' } %>    
    </div>
    <br class="spacer"/>
    <%= f.input :current_password, :required => "true", :hint => "enter current password to confirm withdraw"%>
    <br class="spacer"/>
    <br class="spacer"/>  
    <div class="center">
      <%= f.button :submit, "Submit", :class => "center"%>
    </div>
  <% end %>
</div>