<%= render :partial => "users/manage_account_header" %>
<div class="ma">
  <div class="group">
    <ul class="tabs center">
        <li> <%= link_to "Confirmation Needed (#{current_user.mtg_sales.where(:status => "pending").count})", account_sales_path(:status => "pending")%> </li>
        <li> <%= link_to "Ready to Deliver (#{current_user.mtg_sales.where(:status => "confirmed").count})", account_sales_path(:status => "confirmed") %> </li>      
        <li> <%= link_to "Complete (#{current_user.mtg_sales.where(:status => "delivered").count})", account_sales_path(:status => "delivered") %> </li>
    </ul>
  </div>
  <h2><%="#{pluralize(@sales.count, "Sale", "Sales")}"%></h2>
  <% @sales.each do |t| %>
    
    <%= render :partial => "mtg/transactions/teaser" , :locals => {:transaction => t} %>
    <%= render :partial => "mtg/transactions/options" , :locals => {:transaction => t} %>          
      
  <% end %>
</div>