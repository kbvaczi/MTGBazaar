<%= render :partial => "users/manage_account_header" %>
<div class="ma">
  <h2><%="#{@active_listings.count} Active Listings"%></h2>
  
  <%# Do this if the user has listings %>
  <% if @active_listings.count > 0 %>
    <% @active_listings.each do |listing| %>
      <table style="width:100%; font-size:80%;">
        <tr style="text-align:center;">
          <th>Name</th>
          <th>Set</th>
          <th>Price</th>
          <th>Cond.</th>
          <th>Lang.</th>
          <th>Options</th>
          <th>Quantity</th>
          <th>Remove</th>              
        </tr>
        <tr style="text-align:center;">
          <td>
            <%= display_name(listing.card.name)%>
          </td>
          <td>
            <%= display_set_symbol(listing.card.set)%>
          </td>
          <td>
            <%= number_to_currency(listing.price)%>
          </td>          
          <td>
            <%= listing.condition %>
          </td>
          <td>
            <%= display_flag_symbol(listing) %>
          </td>          
          <td>
            <% if listing.foil %>
              <div class ="left"> Foil </div><div class="right"> X </div><br/>
            <% end %>
            <% if listing.misprint %>
              <div class ="left"> Misprint </div><div class="right"> X </div><br/>
            <% end %>
            <% if listing.signed %>
              <div class ="left"> Signed </div><div class="right"> X </div><br/>
            <% end %>
            <% if listing.altart %>
              <div class ="left"> Alt. Art </div><div class="right"> X </div><br/>
            <% end %>
          </td>
          <td>
            <%= listing.quantity %> &nbsp; &nbsp;
          </td>
          <td>
            <%= link_to "edit", edit_mtg_listing_path(listing)%>
          </td>
          <td>|</td>
          <td>
            <%= link_to "remove", mtg_listing_path(listing), :method => :delete , :confirm => "Are you sure you want to permanently delete this listing?"%>
          </td>
        <tr/>
      </table>          
    <% end %>


    <br class="spacer"/>
    <div class="right">
      <%= "Subtotal: #{number_to_currency(current_cart.total_price)}" %>
    </div>
    <br class="spacer"/>
    <div class="center">
      <%= button_to "Check Out", cart_checkout_path, :method => :post %>
    </div>

    <%# do this if there are no items in the user's cart%>
    <% else %>
    
      <div class="center"><%= "Your cart is currently empty" %></div>
      
    <% end %>  
  
</div>