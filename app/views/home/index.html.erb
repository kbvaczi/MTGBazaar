<% title "A Better Way to Buy and Sell MTG" %>

<div id='news_bar'>
  <h1>News Article Titles</h1>
</div>

<div id='articles_wrapper'>
  <% articles = TeamZ::Article.includes(:profile).viewable.
                order('team_z_articles.active_at DESC').
                group("team_z_profiles.id").
                limit(6)
  %>
  <% articles.each do |article| %>
    <%= render :partial => 'team_z/articles/teaser', :locals => {:article => article} %>
  <% end %>   
</div>

